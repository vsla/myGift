generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // uses connection pooling
  // directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  imgUrl      String
  gifted      Boolean @default(false)
  giftedBy    String?
  description String
  category    String
  price       Float
  productLink String
}
